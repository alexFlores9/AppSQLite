<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/degradado"
 >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busqueda por codigo"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/et_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/tv"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="5dp"
        android:hint="Ingrese el codigo"
       android:textColorHint="#fff"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:drawableLeft="@drawable/ic_key" />


    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="140dp"
        android:text="Buscar"
        android:textColor="#fff"
        android:background="@drawable/botones"
        android:shadowColor="#2314A8"
        android:shadowDx="-3"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:drawableStart="@drawable/ic_5"
        android:paddingLeft="10dp"
        android:drawablePadding="0dp"
        android:drawableLeft="@drawable/ic_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="#FF0000"
            android:text="x"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@drawable/txt"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>